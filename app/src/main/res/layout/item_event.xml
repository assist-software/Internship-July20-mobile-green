<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventLinearLayout"
    android:layout_width="250dp"
    android:layout_height="235dp"
    android:layout_marginEnd="@dimen/space_8dp"
    android:background="@drawable/btn_rounded_8dp_light_gray_border"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_114dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_8dp_black_green"
            android:fontFamily="@font/inter_bold"
            android:text="@string/join_txt"
            android:textColor="@color/cyan"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/space_60dp"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/space_32dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_16dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_16dp"
                android:layout_height="@dimen/space_16dp"
                android:src="@drawable/ic_location"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dim_4dp"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center"
                android:textColor="@color/gray6"
                android:textSize="@dimen/dim_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_16dp"
                android:layout_height="@dimen/space_16dp"
                android:src="@drawable/ic_time"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dim_4dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/gray6"
                android:textSize="@dimen/dim_14sp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>