<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pastEventsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/past_events"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/text_18sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pastEventsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/margin_16dp"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/joinedEventsTextView"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/joined_events"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/text_18sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/joinedEvetsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/pendingEventsTextView"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_events"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/text_18sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pendingEventsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

