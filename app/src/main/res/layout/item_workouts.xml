<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="270dp"
    android:layout_marginEnd="@dimen/space_8dp"
    android:background="@drawable/btn_rounded_8dp_light_gray_border"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/space_24dp"
    android:paddingTop="@dimen/space_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/space_24dp">

            <TextView
                android:id="@+id/day_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="@string/default_day"
                android:textColor="@color/cyan"
                android:textSize="@dimen/dim_60sp" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/default_month"
                android:textColor="@color/gray4"
                android:textSize="@dimen/dim_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                android:id="@+id/day_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/default_day_name"
                android:textColor="@color/gray4"
                android:textSize="@dimen/dim_14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@string/line_separator"
                    android:textColor="@color/cyan"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/default_year"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/dim_14sp" />

            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_42dp"
                        android:layout_height="@dimen/margin_42dp"
                        android:layout_gravity="center"
                        android:paddingEnd="@dimen/margin_8dp"
                        android:src="@drawable/ic_bike_cyan" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textStyle="bold"
                                android:text="@string/hashtag_3"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dim_22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dim_4dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textStyle="bold"
                                android:text="@string/km_txt"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dim_14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/distance_txt"
                            android:textColor="@color/gray5"
                            android:textSize="@dimen/dim_14sp" />
                    </LinearLayout>

                </LinearLayout>
                <View android:layout_height="0dp"
                    android:layout_width="@dimen/space_0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_42dp"
                        android:layout_height="@dimen/margin_42dp"
                        android:layout_gravity="center"
                        android:paddingEnd="@dimen/margin_8dp"
                        android:src="@drawable/ic_clock_cyan" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textStyle="bold"
                                android:text="@string/hashtag_3"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dim_22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dim_4dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textStyle="bold"
                                android:text="@string/min_txt_caps"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dim_14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/time_txt"
                            android:textColor="@color/gray5"
                            android:textSize="@dimen/dim_14sp" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_42dp"
                        android:layout_height="@dimen/margin_42dp"
                        android:layout_gravity="center"
                        android:paddingEnd="@dimen/margin_8dp"
                        android:src="@drawable/ic_calories_cyan" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textStyle="bold"
                            android:text="@string/hashtag_3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dim_22sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/calories_txt"
                            android:textColor="@color/gray5"
                            android:textSize="@dimen/dim_14sp" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_42dp"
                        android:layout_height="@dimen/margin_42dp"
                        android:layout_gravity="center"
                        android:paddingEnd="@dimen/margin_8dp"
                        android:src="@drawable/ic_bpm_cyan" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bpm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textStyle="bold"
                            android:text="@string/hashtag_3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dim_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/bpm_txt_caps"
                            android:textColor="@color/gray5"
                            android:textSize="@dimen/dim_14sp" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>
</LinearLayout>