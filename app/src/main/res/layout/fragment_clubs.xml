<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/space_16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_24dp"
                android:layout_marginBottom="@dimen/space_12dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/new_clubs_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/new_clubs_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/joined_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12dp"
                android:layout_marginBottom="@dimen/space_12dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/joined_clubs_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/joined_clubs_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/pending_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12dp"
                android:layout_marginBottom="@dimen/space_12dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/pending_clubs_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pending_clubs_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_56dp"
                android:scrollbars="none" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>