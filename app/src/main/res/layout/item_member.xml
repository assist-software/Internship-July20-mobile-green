<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/space_4dp">

    <LinearLayout
        android:id="@+id/club"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_rounded_4dp_black"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/space_16dp"
        android:paddingVertical="@dimen/space_12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_default_avatar"
            android:padding="1dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/color_white" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/club_name_unknown"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dim_24sp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"/>

    </LinearLayout>

</LinearLayout>