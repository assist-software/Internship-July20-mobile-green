<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/space_16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todayWorkoutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                android:text="@string/today_s_workout"
                android:layout_marginTop="@dimen/space_24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginStart="@dimen/border_1dp"
                android:layout_marginEnd="@dimen/border_1dp"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/dim_2dp"
                android:background="@drawable/btn_rounded_8dp_white_noborder">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/space_24dp"
                    android:paddingTop="@dimen/space_8dp"
                    android:paddingBottom="@dimen/space_42dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/space_24dp">

                            <TextView
                                android:id="@+id/dayNumberTodayWorkout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:text="@string/default_day"
                                android:textColor="@color/cyan"
                                android:textSize="@dimen/dim_60sp" />

                            <TextView
                                android:id="@+id/monthTodayWorkout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/default_month"
                                android:textColor="@color/gray4"
                                android:textSize="@dimen/dim_14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/dayNameTodayWorkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/default_day_name"
                                    android:textColor="@color/gray4"
                                    android:textSize="@dimen/dim_14sp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textEnd"
                                    android:text="@string/line_separator"
                                    android:textColor="@color/cyan"
                                    android:textSize="8sp"
                                    tools:ignore="SmallSp" />
                                <TextView
                                    android:id="@+id/yearTodayWorkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/default_year"
                                    android:textColor="@color/gray4"
                                    android:textSize="@dimen/dim_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space_8dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dim_50dp"
                                        android:layout_height="@dimen/dim_50dp"
                                        android:layout_gravity="center"
                                        android:paddingEnd="@dimen/margin_8dp"
                                        android:src="@drawable/ic_bike_cyan"
                                        android:contentDescription="@string/bike_icon"
                                        tools:ignore="RtlSymmetry,TooDeepLayout" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/distanceTodayWorkout"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/roboto_regular"
                                                android:textStyle="bold"
                                                android:text="@string/hashtag_3"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/dim_22sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dim_4dp"
                                                android:fontFamily="@font/roboto_regular"
                                                android:textStyle="bold"
                                                android:text="@string/km_txt"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/dim_14sp" />
                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="@string/distance_txt"
                                            android:textColor="@color/gray5"
                                            android:textSize="@dimen/dim_14sp" />
                                    </LinearLayout>

                                </LinearLayout>
                                <View android:layout_height="0dp"
                                    android:layout_width="@dimen/space_0dp"
                                    android:layout_weight="1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space_8dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dim_50dp"
                                        android:layout_height="@dimen/dim_50dp"
                                        android:layout_gravity="center"
                                        android:paddingEnd="@dimen/margin_8dp"
                                        android:src="@drawable/ic_clock_cyan"
                                        android:contentDescription="@string/clock_icon"
                                        tools:ignore="RtlSymmetry" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/durationTodayWorkout"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/roboto_regular"
                                                android:textStyle="bold"
                                                android:text="@string/hashtag_3"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/dim_22sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dim_4dp"
                                                android:fontFamily="@font/roboto_regular"
                                                android:textStyle="bold"
                                                android:text="@string/min_txt_caps"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/dim_14sp" />
                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="@string/time_txt"
                                            android:textColor="@color/gray5"
                                            android:textSize="@dimen/dim_14sp" />
                                    </LinearLayout>

                                </LinearLayout>

                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space_8dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dim_50dp"
                                        android:layout_height="@dimen/dim_50dp"
                                        android:layout_gravity="center"
                                        android:paddingEnd="@dimen/margin_8dp"
                                        android:src="@drawable/ic_calories_cyan"
                                        android:contentDescription="@string/calories_icon"
                                        tools:ignore="RtlSymmetry" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/caloriesTodayWorkout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:textStyle="bold"
                                            android:text="@string/hashtag_3"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dim_22sp" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="@string/calories_txt"
                                            android:textColor="@color/gray5"
                                            android:textSize="@dimen/dim_14sp" />
                                    </LinearLayout>

                                </LinearLayout>
                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/space_0dp"
                                    android:layout_weight="1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space_8dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dim_50dp"
                                        android:layout_height="@dimen/dim_50dp"
                                        android:layout_gravity="center"
                                        android:paddingEnd="@dimen/margin_8dp"
                                        android:src="@drawable/ic_bpm_cyan"
                                        android:contentDescription="@string/bpm_icon"
                                        tools:ignore="RtlSymmetry" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/bpmTodayWorkout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:textStyle="bold"
                                            android:text="@string/hashtag_3"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/dim_22sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="@string/bpm_txt_caps"
                                            android:textColor="@color/gray5"
                                            android:textSize="@dimen/dim_14sp" />
                                    </LinearLayout>

                                </LinearLayout>

                            </TableRow>

                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/workoutsHistoryTextView"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                android:text="@string/workouts_history" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/workouts_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:scrollbars="none"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/saveChangeButtonMyProfile"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_42dp"
                android:layout_marginBottom="@dimen/margin_74dp"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:layout_height="wrap_content"
                android:height="@dimen/space_42dp"
                android:background="@drawable/btn_rounded_8dp_black"
                android:text="@string/add_workout"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/inter_bold"
                android:onClick="goToAddWorkoutScreen" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>